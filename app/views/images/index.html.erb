<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Description</th>
      <th>Image</th>
      <th>Gallery token</th>
      <th>Image file name</th>
      <th>Image content type</th>
      <th>Image file size</th>
      <th>Image updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.post %></td>
        <td><%= image.description %></td>
        <td><%= image.image %></td>
        <td><%= image.gallery_token %></td>
        <td><%= image.image_file_name %></td>
        <td><%= image.image_content_type %></td>
        <td><%= image.image_file_size %></td>
        <td><%= image.image_updated_at %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

